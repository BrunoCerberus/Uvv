<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bruno.uvv">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MyChildActivity"
            android:label="Minhas Informações"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".MessageActivity"
            android:label="Mensagens"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".SubjectsActivity"
            android:label="Disciplinas"
            android:parentActivityName=".MainActivity" />

        <activity
            android:name=".HourActivity"
            android:label="Horários"
            android:parentActivityName=".MainActivity" />

        <activity android:name=".EventsActivity"
            android:label="Eventos"
            android:parentActivityName=".MainActivity" />

    </application>

</manifest>